<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<HBox prefHeight="100.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.insa.geofast.controller.HeaderController">
    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
               HBox.hgrow="ALWAYS">
        <Image url="@GeoFast.png"/>
        <viewport>
            <Rectangle2D/>
        </viewport>
        <HBox.margin>
            <Insets left="16.0" top="29.0"/>
        </HBox.margin>
    </ImageView>
    <ButtonBar nodeOrientation="LEFT_TO_RIGHT" style="-fx-padding: 21;" HBox.hgrow="ALWAYS">
        <buttons>
            <Button fx:id="importerPlan" alignment="TOP_CENTER" mnemonicParsing="false"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #020817; -fx-border-radius: 5; -fx-max-width: 105px;"
                    text="Importer plan" textFill="#020817">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
            <!-- Buttons -->
            <Button fx:id="importerProgramme" alignment="TOP_CENTER" mnemonicParsing="false"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #020817; -fx-border-radius: 5;"
                    text="Importer un programme" textFill="#020817">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
            <Button fx:id="sauvegarderProgramme" alignment="TOP_CENTER" layoutX="248.0"
                    layoutY="10.0" mnemonicParsing="false"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #020817; -fx-border-radius: 5;"
                    text="Sauvegarder le programme" textFill="#020817">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
            <Button fx:id="exporterProgramme" alignment="TOP_CENTER" layoutX="267.0" layoutY="10.0"
                    mnemonicParsing="false"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #020817; -fx-border-radius: 5; -fx-max-width: 170px;"
                    text="Exporter le programme" textFill="#020817">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
        </buttons>
        <padding>
            <Insets right="10.0" top="21.0"/>
        </padding>
    </ButtonBar>
</HBox>
